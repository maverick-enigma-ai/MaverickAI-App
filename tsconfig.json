{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* IMPORTANT: include Node types so `process` is known */
    "types": ["node", "vite/client"]
  },

  /* IMPORTANT: include your real folders (not just `src`) */
  "include": [
    "api",
    "components",
    "services",
    "utils",
    "types",
    //"legacy",
    "index.html",
    "vite-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "public/**",
    "supabase/**",
    "scripts/**",
    "legacy"
  ]
}
